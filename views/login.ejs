<%- include('../includes/header.ejs') %>
<link rel="stylesheet" type="text/css" href="css/register.css" />
<div class="pagebg">
  <div class="registrationPage">
    <div class="registrationillustration">
      <img src="/images/login.svg" />
    </div>
    <div class="RegistrationMain">
      <h2>Login</h2>
      <% if (errorMessage) { %>
      <div class="user-message user-message--error mt-3">
        <%= errorMessage %>
      </div>
      <% } %>
      <form action="/login" method="POST" class="registrationform">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" required />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" required />
        </div>

        <div class="form-group">
          <p>
            Not a user ?<a style="color: #6c63ff" href="/register"> signup</a>
          </p>
          <button class="btn" type="submit">Login</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../includes/footer.ejs') %>
