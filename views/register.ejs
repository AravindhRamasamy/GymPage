<%- include('../includes/header.ejs') %>
<link rel="stylesheet" type="text/css" href="css/register.css" />
<div class="pagebg">
  <div class="registrationPage">
    <div class="registrationillustration">
      <img src="/images/register.svg" />
    </div>
    <div class="RegistrationMain">
      <h2>Registration</h2>
      <% if (errorMessage) { %>
      <div class="user-message user-message--error mt-3">
        <%= errorMessage %>
      </div>
      <% } %>
      <form action="/register" method="POST" class="registrationform">
        <div class="form-group">
          <label for="username">User Name</label>
          <input type="text" name="username" id="username" required />
        </div>

        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" name="address" id="address" required />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" required />
        </div>

        <div class="form-group">
          <label for="phonenumber">Phone Number</label>
          <input type="text" name="phonenumber" id="phonenumber" required />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" required />
        </div>

        <div class="form-group">
          <p>
            already a user ?<a style="color: #6c63ff" href="/login"> signin</a>
          </p>
          <button class="btn" type="submit">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../includes/footer.ejs') %>
